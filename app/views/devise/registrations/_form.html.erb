<div class="row">
  <div class="span6">
    <legend>Sign up now</legend>
    <%= form_for(:user, :as => "user", :url => registration_path("user")) do |f| %>

      <div class="clearfix">
        <%= f.label :email %>
        <div class="input">
          <%= f.email_field :email %>
        </div>
      </div>

      <div class="clearfix">
        <%= f.label :password %>
        <div class="input">
          <%= f.password_field :password %>
        </div>
      </div>

      <div class="clearfix">
        <%= f.label :password_confirmation %>
        <div class="input">
          <%= f.password_field :password_confirmation %>
        </div>
      </div>

      <div class="modal-footer">
        <%= f.submit "Sign up", :class => "btn primary" %>
      </div>
    <% end %>
  </div>
</div>
