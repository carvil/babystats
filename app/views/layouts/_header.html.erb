<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="#">Babystats</a>
      <div class="nav-collapse">
        <ul class="nav">
          <li class="active"><a href="/">Home</a></li>
          <li class><a href="#">About</a></li>
          <li class><a href="#">Contact</a></li>
          <li class="divider-vertical"></li>
        </ul>

        <ul class="nav pull-right">
          <% if user_signed_in? %>
            <li class="dropdown" data-dropdown="dropdown" >
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">My Babies<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="/babies/new">Add baby</a></li>
                <li><a href="/babies">List babies</a></li>
              </ul>
            </li>
          <% end %>

          <li class="divider-vertical"></li>

          <% if user_signed_in? %>
            <li class="dropdown" data-dropdown="dropdown" >
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %><b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Settings", "/users/edit" %></li>
                <li><%= link_to "Sign out", "/users/sign_out", :method => :delete %></li>
              </ul>
            </li>
          <% else %>
            <%= form_for(:user, as: "user", url: user_session_path, :html => {class: "navbar-form  pull-right"}) do |f| %>
              <%= f.email_field :email, class: "input-large", placeholder: "Email" %>
              <%= f.password_field :password, class: "input-small", placeholder: "Password" %>
              <button class="btn" type="submit">Sign in</button>
            <% end %>
          <% end %>
        </ul>

      </div>
    </div>
  </div>
</div>
